<form method="post" action="/sample/index">
    <table>
        <tr>
            <th>NAME:</th>
            <td><input type="text" name="name" placeholder="name"></td>
        </tr>
        <tr>
            <th>AGE:</th>
            <td><input type-"text" name="age" placeholder="age"></td>
        </tr>
        <tr>
            <th>MAIL:</th>
            <td><input type="text" name="mail" placeholder="E-mail"></td>
        </tr>
        <tr>
            <th>TEL:</th>
            <td><input type="text" name="tel" placeholder="tel"></td>
        </tr>
        <tr>
            <th></th>
            <td><input type="submit" value="登録" class="submit"></td>
        </tr>
   
        </table><form>
<hr>
<p>データベースに保存してある全レコード</p>
<!-- @datasに保存した全レコードを表示する処理 -->
<table>
<tr>
    <th>ID</th>
    <th>Name</th>
    <th>Age</th>
    <th>Mail</th>
    <th>Tel</th>
    <th>Deletion</th>
    <th>Update</th>
</tr>
<%= render :partial => "partials/mydata", :collection => @datas %>
</table>

<!-- レコードのページが0以下のリンクは表示しない -->
<% if @page > 0%>
<a = href="/sample/index?page=<%=(@page - 1) %>">[<%= (@page-1) %>]</a>
<% end %>
[<%= @page %>]
<!-- レコードの総数以上のページのリンクは表示しない -->
<% if @record_count > (@page + 1) * @page_num%>
<a = href="/sample/index?page=<%= (@page + 1) %>">[<%= (@page+1)%>]</a>
<% end %>
